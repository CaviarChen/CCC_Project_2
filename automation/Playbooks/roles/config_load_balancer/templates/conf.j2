upstream ccc {
    ip_hash;
    {% for host in groups['all']  %}
        server {{ hostvars[host]['ansible_host'] }}:5984;
    {% endfor %}
}

server {
    listen 8080;

    location / {
    }

    location /couchdb {
        rewrite /couchdb/(.*) /$1 break;
        proxy_pass http://ccc;
        proxy_redirect off;
        proxy_buffering off;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}