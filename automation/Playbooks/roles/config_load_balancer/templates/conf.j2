upstream couchdb {
    ip_hash;
    {% for host in groups['all']  %}
        server {{ hostvars[host]['ansible_host'] }}:5984;
    {% endfor %}
}

upstream backgo {
    {% if 'alfa' in groups['all'] %}}
        sever {{ hostvars['alfa']['asnible_host'] }}:8888 fail_timeout=60s max_fails = 1;
    {% endif %}}
    {% if 'bravo' in groups['all'] %}}
        sever {{ hostvars['bravo']['asnible_host'] }}:8888 backup;
    {% endif %}}
}

server {
    listen 8080;

    location / {
        proxy_pass http://couchdb;
        proxy_redirect off;
        proxy_buffering off;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Credentials' 'true';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,X-CustomHeader,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type';
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Content-Type' 'text/plain charset=UTF-8';
            add_header 'Content-Length' 0;
            return 204;
        }
        if ($request_method = 'POST') {
           add_header 'Access-Control-Allow-Origin' '*';
           add_header 'Access-Control-Allow-Credentials' 'true';
           add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
           add_header 'Access-Control-Allow-Headers' 'DNT,X-CustomHeader,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type';
        }
        if ($request_method = 'GET') {
           add_header 'Access-Control-Allow-Origin' '*';
           add_header 'Access-Control-Allow-Credentials' 'true';
           add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
           add_header 'Access-Control-Allow-Headers' 'DNT,X-CustomHeader,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type';
        }
    }

    location /go_backend {
        rewrite /go_backend/(.*) /$1 break;
        proxy_pass http://backgo
    }
}

server {
    listen 80;

    location / {
    }
}